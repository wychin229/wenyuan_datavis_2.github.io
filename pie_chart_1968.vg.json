{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 150,
  "height": 150,
  "title": "1968",
  "data": {
    "url": "data/athlete_events.csv"
  },
  "transform": [
    {
      "filter": "datum.Season == 'Summer'"
    },
    {
      "filter": "datum.Year == 1968"
    }
  ],
  "encoding": {
    "theta": {"aggregate": "count", "stack": true},
    "color": {
      "field": "Sex",
      "type": "nominal"
    }
  },
  "layer": [
    {
      "mark": {"type": "arc", "tooltip": true, "innerRadius": 50},
      "encoding": {
        "tooltip": [
          {
            "aggregate": "count",
            "title": "Number of Athletes"
          },
          {
            "field": "Sex",
            "type": "nominal",
            "title": "Gender"
          }
        ]
      }
    },
    {
      "mark": {"type": "text", "radius": 35},
      "encoding": {
        "text": {"aggregate": "count", "type": "quantitative"},
        "color": {
          "field": "Sex",
          "type": "nominal",
          "scale": {
            "domain": ["M","F"],
            "range": ["#00ADE7","#E60153"]
          }
        }
      }
    }
  ],
  "config": {
    "view": {
       "stroke": "transparent"
    },
    "legend": {
      "disable": true
    }
  }
}