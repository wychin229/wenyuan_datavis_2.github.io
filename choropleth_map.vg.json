{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Medal Count in Tokyo Olympics 2020",
  "width": 900,
  "height": 450,
  "data": {
    "url": "js/ne_110m_admin_0_countries.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "data/country_clean.csv"
        },
        "key": "country",
        "fields": [
          "total"
        ]
      }
    },
    {
      "calculate": "datum.total",
      "as": "Total Count"
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "data": {
        "url": "js/ne_110m_admin_0_countries.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "Total Count",
          "type": "quantitative"
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "total",
            "type": "quantitative",
            "title": "Medal Count"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {
       "stroke": "transparent"
    }
  }
}